<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@color/white">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvBienvenida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido, Tutor"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                android:layout_marginBottom="16dp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

            <Button
                    android:id="@+id/btnSubirContenido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subir Contenido"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/purple_500" />

            <Button
                    android:id="@+id/btnEvaluarEstudiantes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Evaluar Estudiantes"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/purple_500" />
        </LinearLayout>

        <Button
                android:id="@+id/btnCambioEstudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar a Modo Estudiante"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/teal_200"
                android:textColor="@color/black" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cursos como Tutor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCursosTutor"
                android:layout_width="match_parent"
                android:layout_height="400dp" />

    </LinearLayout>
</ScrollView>